		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0",
		"@sendgrid/mail": "^8.1.3",
		"@stripe/stripe-js": "^4.5.0",
		"stripe": "^16.12.0"
